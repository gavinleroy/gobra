package outlineSimple1

type pair struct {
    l, r int
}

func test1() {

    var x *pair

    ensures acc(x) && x.l == 3
    outline (
        x = &pair{3,5}
    )

    assert x.l >= 2
}

func test2() {

    ensures x >= 5
    outline (
        x := 10
    )

    assert x >= 0
}

func test3() {

    ensures acc(&x) && x >= 5
    outline (
        x@ := 10
    )

    assert x >= 0
}

func test4() {

    x := 2

    requires x > 0
    ensures  x > 3
    outline (
        x += 1

        requires x > 1
        ensures  x > 2
        outline (
            x += 1
        )

        x += 1
    )

    assert x > 3
    //:: ExpectedOutput(assert_error:assertion_error)
    assert x == 5
}

func test5() {

    x@ := 10

    L:
    requires acc(&x)
    ensures  acc(&x) && x == old[L](x) + 1
    outline (
        x += 1
    )

    assert x == 11
}